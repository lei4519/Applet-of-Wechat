page{
  background-color: #fff;
}
.shop{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  position: relative;
  align-items: center;
}
.shop-img{
  width: 160rpx;
  height: 160rpx;
}
.shop-info{
  width: 520rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #666;
  line-height: 1.5;
}
.shop-title{
  font-size: 16px;
  color: #333;
  width: 372rpx;
}
.shop-star{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #e2e2e2;
}
.star-after{
  color: #e2e2e2;
}
.star-before{
  position: absolute;
  color: #f19e38;
  top: 0;
  left: 0;
  width: 90%;
  overflow: hidden;
}