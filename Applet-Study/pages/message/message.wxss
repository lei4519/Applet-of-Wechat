.card{
  background-color: #fff;
  margin: 60rpx 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  border: 1rpx solid #ddd;
}
.card-title{
  margin-bottom: 20rpx;
  font-size: 20px;
}
.card-date{
  font-size: 12px;
  color: #ccc;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx;
}
.card-img{
  width: 100%;
  height: 300rpx;
}
.card-desc{
  padding: 10rpx 0;
  font-size: 16px;
  border-bottom: 1rpx solid #ccc;
}
.card-read{
  color: #999;
  font-size: 14px;
  margin-top: 20rpx;
}
